                                <% } %>
                            </select>
                        </div>
                    </div> 
                    <div class="row d-flex justify-content-center">
                        <div class="col-12 col-sm-6 my-3">
                            <label class="col-form-label-lg">Preferred Distance<span class="star">*</span></label>
                            <select name="user[relType]" class="form-control" required id="distance">
                                <% if(user.relType === "Short Distance Relationships") { %>                                    
                                    <option selected>Short Distance Relationships</option>
                                    <option>Long Distance Relationships</option>
                                    <option>Doesn't Matter</option>
                                <% } else if (user.relType === "Long Distance Relationships") { %>    
                                    <option selected>Short Distance Relationships</option>
                                    <option>Long Distance Relationships</option>
                                    <option>Doesn't Matter</option>
                                <% } else { %>
                                    <option>Short Distance Relationships</option>
                                    <option selected>Long Distance Relationships</option>
                                    <option>Doesn't Matter</option> 
                                <% } %>
                            </select>
                        </div>
                        <div class="col-12 col-sm-6 my-3" >
                            <label class="col-form-label-lg">Live In?<span class="star">*</span></label>
                            <select required name="user[liveIn]" class="form-control" id="liveIn">
                                <option>--Not Specified--</option>
                                <% if(user.liveIn === "Yes") { %>
                                    <option selected>Yes</option>
                                    <option>No</option>
                                    <option>Doesn't Matter</option>
                                <% } else if(user.liveIn === "No") { %>
                                    <option>Yes</option>
                                    <option selected>No</option>
                                    <option>Doesn't Matter</option>
                                <% } else { %>
                                    <option>Yes</option>
                                    <option>No</option>
                                    <option selected>Doesn't Matter</option>
                                <% } %>   
                            </select>   
                        </div> 
                    </div>
                    

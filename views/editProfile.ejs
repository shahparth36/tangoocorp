                                Update Profile Pictures
                                <i class="fas fa-camera ml-2"></i>
                            </button>
                        </span>  
                    
                        <form  action="/profile/<%= user._id%>/view?_method=PUT" method="POST"
                            enctype="multipart/form-data">
                            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                            aria-hidden="true">
                            <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header ">
                                        <h5 class="modal-title " id="exampleModalLabel">Edit Profile Pictures
                                        </h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <input class="mt-3 mb-5" type="file" accept="image/*" name="images" multiple />
                                        <div class="row d-flex text-center">
                                            <% user.images.forEach(function(image,i) { %>
                                            <div class="col-12">
                                                <img src="<%= image.url %>" alt="..." width="300px;" height="200px;">
                                                <div class="my-3">
